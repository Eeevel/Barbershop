<h2>Список клиентов</h2>

<table class="table table-bordered">
  <thead>
  <tr>
    <th>#</th>
    <th>Имя</th>
    <th>Телефон</th>
    <th>Дата и время</th>
    <th>Барбер</th>
    <th>Цвет</th>
  </tr>
  </thead>
  <tbody>
    <% @results.each do |row| %>
      <tr>
        <th scope="row"><%= row['id'] %></th>
        <td><%= row['username'] %></td>
        <td><%= row['phone'] %></td>
        <td><%= row['datestamp'] %></td>
        <td><%= row['barber'] %></td>
        <td style="background-color: <%= row['color'] %>"><%= row['color'] %></td>
      </tr>
    <% end %>
  </tbody>
</table>