<h2>Контакты</h2>
<h2>Отправить сообщение</h2>

<form action="/contacts" method="POST" role="form">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="user_name" type="text" class="form-control" placeholder="Ваше имя" value="<%= @user_name %>">
  </div>

  <div class="form-group">
    <label>Ваш email</label>
    <input name="email" type="text" class="form-control" placeholder="Ваш email" value="<%= @email %>">
  </div>

  <div class="form-group">
    <label>Сообщение</label>
    <textarea name="report" class="form-control" rows="5" placeholder="Сообщение"></textarea>
  </div>

  <button type="submit" class="btn btn-primary">Отправить</button>

</form>

<h4><%= @message %></h4>